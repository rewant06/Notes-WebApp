# Example backend env for local development
# Copy to infra/backend.env and fill in values. Do NOT commit real secrets.

# Django
DJANGO_SETTINGS_MODULE=core.settings
DEBUG=1
SECRET_KEY=changeme-local-only
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost

# Database (choose one stack and remove the other)
